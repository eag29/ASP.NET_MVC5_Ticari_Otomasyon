@using TicariOtomasyon.Models.Siniflar
@model List<Departman>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h3>Departmanlar</h3>
<br />
<table class="table table-bordered">

    <tr>
        <th>ID</th>
        <th>Departman Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.DepartmanID</td>
            <td>@item.DepartmanAd</td>
            <td> <a href="/Departman/DepartmanSil/@item.DepartmanID" class="btn btn-danger"> Sil </a> </td>
            <td> <a href="/Departman/DepartmanGetir/@item.DepartmanID" class="btn btn-success"> Güncelle </a> </td>
            <td> <a href="/Departman/DepartmanDetay/@item.DepartmanID" class="btn btn-success" style="background-color:indianred; color:white"> Detaylar </a> </td>
        </tr>
    }

</table>
<a href="/Departman/DepartmanEkle" class="btn btn-info"> Departman Ekle </a>

