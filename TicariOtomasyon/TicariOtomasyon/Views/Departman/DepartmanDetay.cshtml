@using TicariOtomasyon.Models.Siniflar
@model List<Personel>

@{
    ViewBag.Title = "DepartmanDetay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Departman Detay Sayfası</h2>
<br />

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active"> Departman Adı: @ViewBag.dptAD </li>
</ol>

<table class="table table-hover">

    <tr>
        <th>Personel</th>
        <th>Satışlar</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.PersonelAd @item.PersonelSoyad</td>
            <td> <a href="/Departman/DepartmanPersonelSatis/@item.PersonelID" class=" btn btn-default" style="background-color: khaki"> Satışlar </a> </td>
        </tr>
    }

</table>
