@using TicariOtomasyon.Models.Siniflar
@model List<SatisHareket>

@{
    ViewBag.Title = "DepartmanPersonelSatis";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Departman Personel Satış</h2>
<br />

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active"> Personel Adı: @ViewBag.perAdSoyad</li>
</ol>

<table class="table table-condensed">

    <tr>
        <th> Ürün </th>
        <th> Cari </th>
        <th> Fiyat </th>
        <th> Adet </th>
        <th> Toplam </th>
        <th> Tarih </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Urun.UrunAd</td>
            <td>@item.Cari.CariAd @item.Cari.CariSoyad</td>
            <td>@item.Fiyat ₺</td>
            <td>@item.Adet</td>
            <td>@item.ToplamTutar</td>
            <td>@item.Tarih</td>
            @*<td> <a href="" class="btn btn-default" style="background-color: dodgerblue; color: white"> Yazdır </a> </td>*@
        </tr>
    }

</table>

