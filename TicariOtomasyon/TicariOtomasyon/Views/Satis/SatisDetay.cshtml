@using TicariOtomasyon.Models.Siniflar
@model List<SatisHareket>
@{
    ViewBag.Title = "SatisDetay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2> Satış Detayı</h2>
<br />

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active"> Personel Adı: @ViewBag.perAdSoyad</li>
</ol>

<table class="table table-condensed">

    <tr>
        <th> Satış Id </th>
        <th> Ürün </th>
        <th> Cari </th>
        <th> Fiyat </th>
        <th> Adet </th>
        <th> Toplam </th>
        <th> Tarih </th>
        <th> Yazdır </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.SatisID</td>
            <td>@item.Urun.UrunAd</td>
            <td>@item.Cari.CariAd @item.Cari.CariSoyad</td>
            <td>@item.Personel.PersonelAd @item.Personel.PersonelSoyad</td>
            <td>@item.Fiyat</td>
            <td>@item.Adet</td>
            <td>@item.ToplamTutar</td>
            <td>@item.Tarih</td>
        </tr>
    }

</table>
